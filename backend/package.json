{
  "name": "@app-center/backend",
  "version": "1.0.0",
  "description": "App Center Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ENABLE_HTTPS=true tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "init-db": "tsx database/init-database.ts --verbose",
    "init-db:force": "tsx database/init-database.ts --force --verbose",
    "init-db:schema": "tsx database/init-database.ts --no-seed --verbose",
    "db:backup": "cp data/database.sqlite data/database.backup.$(date +%Y%m%d_%H%M%S).sqlite && echo 'Database backed up'",
    "test-uuid": "tsx src/utils/testIdGeneration.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@app-center/shared": "workspace:*",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.1",
    "app-info-parser": "^1.1.6",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.4",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.18.6",
    "@typescript-eslint/parser": "^8.18.6",
    "eslint": "^9",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}