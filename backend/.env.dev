# SIT Environment Configuration
# Copy this file to .env.sit and modify as needed

# Server Configuration
PORT=8000
NODE_ENV=development
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/database.sqlite

# JWT
JWT_SECRET=sit-environment-jwt-secret-key-2025
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=524288000

# CORS
CORS_ORIGIN=https://192.168.8.111:3000

# SSL/HTTPS
SSL_KEY_PATH=../certs/192.168.8.111-key.pem
SSL_CERT_PATH=../certs/192.168.8.111.pem
ENABLE_HTTPS=true

# Default Admin Users
DEFAULT_SUPER_ADMIN_USERNAME=superadmin
DEFAULT_SUPER_ADMIN_EMAIL=superadmin@appcenter.com
DEFAULT_SUPER_ADMIN_PASSWORD=admin123

DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@appcenter.com
DEFAULT_ADMIN_PASSWORD=admin123 